{
  "name": "runbikehike",
  "version": "0.2.0",
  "engines": [
    "node = 0.8.x"
  ],
  "description": "Run, Bike, Hike... allow you to record your running or biking sessions, so you can follow your sporting progress.",
  "main": "server.js",
  "scripts": {
    "check:js": "./scripts/check-js.sh",
    "clean:db": "rm -R body_weight calories gps_tracks sessions",
    "build": "./scripts/build.sh",
    "dev": "NODE_ENV=development DEBUG=pouchdb:* nodemon --debug ./server.js",
    "start": "node server.js",
    "publish:cozy": "./scripts/publish-cozy.sh",
    "test:server": "mocha test/test-server.js",
    "test:test": "npm run test:server",
    "test:debug": "NODE_ENV='development' DEBUG=pouchdb:* mocha test/test-server.js",
    "test": "NODE_ENV='development' grunt check",
    "cozy-test": "npm run deploy && cd publish/runbikehike-cozy && cozy-dev deploy 9550 && cd ../.. ",
    "deploy": "npm run build && npm run publish:cozy"
  },
  "config": {
    "ghooks": {
      "pre-commit": "./scripts/verify.sh"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/nicodel/runbikehike.git"
  },
  "author": "Nicolas Delebecque",
  "license": "MPL2.0 licence",
  "bugs": {
    "url": "https://gitlab.com/nicodel/runbikehike/issues"
  },
  "icon-path": "img/icon128.png",
  "dependencies": {
    "americano": "^0.4.5",
    "body-parser": "^1.15.2",
    "cozydb": "^0.1.13",
    "debug": "^2.3.3",
    "errorhandler": "^1.5.0",
    "express": "^4.13.1",
    "method-override": "^2.3.7",
    "morgan": "^1.7.0",
    "pouchdb": "^6.0.5",
    "serve-favicon": "^2.3.2",
    "webl10n": "^1.0.0"
  },
  "devDependencies": {
    "csslint": "^1.0.2",
    "ghooks": "^1.3.2",
    "grunt": "^1.0.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^1.0.2",
    "grunt-contrib-jshint": "^1.0.0",
    "grunt-contrib-uglify": "^2.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-express-server": "^0.5.3",
    "grunt-mocha": "^1.0.2",
    "grunt-mocha-phantomjs": "^4.0.0",
    "grunt-mocha-test": "^0.13.2",
    "jshint": "^2.9.3",
    "mocha": "^3.0.2",
    "mocha-cli": "^1.0.1",
    "nodemon": "^1.10.2",
    "should": "^11.1.0",
    "supertest": "^2.0.1",
    "uglify-js": "^2.7.3",
    "uglifycss": "0.0.21"
  }
}
